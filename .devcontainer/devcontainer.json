{
  "name": "JSON Editor Development",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  "postStartCommand": "bash /workspaces/json-editor/.devcontainer/start-server.sh",
  "postAttachCommand": "bash /workspaces/json-editor/.devcontainer/start-server.sh",

  "forwardPorts": [8000],

  "portsAttributes": {
    "8000": {
      "label": "JSON Editor",
      "onAutoForward": "openBrowser"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": []
    }
  }
}
