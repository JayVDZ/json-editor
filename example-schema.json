{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Example JSON Schema",
  "description": "An example schema for testing the JSON Schema validation feature",
  "type": "object",
  "required": ["name", "version", "features"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "settings": {
      "type": "object",
      "properties": {
        "theme": {
          "type": "string",
          "enum": ["light", "dark"]
        },
        "autoSave": {
          "type": "boolean"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
